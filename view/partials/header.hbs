{{#if theHeaderAnchs}}
  {{#each theHeaderAnchs}}
    <a href="{{ this.href }}">{{ this.title }}</a>
  {{/each}}
{{/if}}
<div class="user-header">
  {{#if theUser}}
    <a href="/login?logout=1">Logout</a>
  {{else}}
    <a href="/login">Login</a>
  {{/if}}
</div>
<div class="user-header">
  {{#if theUser}}
    {{!-- {{#if theUser.firstName}}
    {{/if}} --}}
    <p>Welcome [
      {{#if theUser.firstName}}
        {{theUser.firstName}}
        {{#if theUser.lastName}}
          {{theUser.lastName}}
        {{/if}}
      {{else if theUser.lastName}}
        {{theUser.lastName}}
      {{else}}
        {{theUser.userName}}
      {{/if}}
    ]</p>
  {{/if}}
</div>